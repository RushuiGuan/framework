<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net6.0-windows</TargetFramework>
		<Nullable>enable</Nullable>
	</PropertyGroup>

	<ItemGroup>
		<None Remove="Albatross.Excel.SampleAddIn.dna" />
		<None Remove="appsettings.json" />
		<None Remove="appsettings.production.json" />
		<None Remove="ribbon.xml" />
		<None Remove="serilog.json" />
	</ItemGroup>

	<ItemGroup>
		<Content Include="appsettings.json">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Include="appsettings.production.json">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Include="Albatross.Excel.SampleAddIn.dna">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Include="serilog.json">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
	</ItemGroup>

	<ItemGroup>
		<EmbeddedResource Include="Embedded\ribbon.xml" />
	</ItemGroup>
	<ItemGroup>
		<PackageReference Include="ExcelDna.AddIn" Version="1.6.0" />
		<PackageReference Include="ExcelDna.Interop" Version="15.0.1" />
		<PackageReference Include="Humanizer" Version="2.14.1" />
	</ItemGroup>
	<ItemGroup>
	  <ProjectReference Include="..\..\src\Albatross.Authentication\Albatross.Authentication.csproj" />
	  <ProjectReference Include="..\..\src\Albatross.Excel\Albatross.Excel.csproj" />
	  <ProjectReference Include="..\..\src\Albatross.Hosting.Excel\Albatross.Hosting.Excel.csproj" />
	</ItemGroup>
</Project>
