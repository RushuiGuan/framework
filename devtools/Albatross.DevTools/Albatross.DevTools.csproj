<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<OutputType>Exe</OutputType>
		<TargetFramework>net8.0</TargetFramework>
		<Nullable>enable</Nullable>
		<AssemblyName>devtools</AssemblyName>
		<PackageId>Albatross.DevTools</PackageId>
		<PackAsTool>True</PackAsTool>
		<PackageProjectUrl>$(RepositoryProjectRoot)/devtools/Albatross.DevTools</PackageProjectUrl>
		<Description>A command line program that contains utilities that help with dotnet development process</Description>
	</PropertyGroup>

	<ItemGroup>
		<None Include="..\..\LICENSE">
			<Pack>True</Pack>
			<PackagePath>
			</PackagePath>
		</None>
		<None Include="README.md">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>

	<ItemGroup>
	  <PackageReference Include="Albatross.CommandLine" Version="7.5.6" />
	  <PackageReference Include="LibGit2Sharp" Version="0.30.0" />
	</ItemGroup>
</Project>