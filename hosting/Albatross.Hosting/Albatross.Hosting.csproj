<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk.Web">
	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<OutputType>Library</OutputType>
		<Nullable>enable</Nullable>
		<OpenApiGenerateDocuments>false</OpenApiGenerateDocuments>
		<IsPackable>true</IsPackable>
		<Description>A library for creating .Net Web Api or Service applications with preconfigured settings</Description>
		<PackageProjectUrl>$(RepositoryProjectRoot)/Hosting/Albatross.Hosting</PackageProjectUrl>
	</PropertyGroup>
	<ItemGroup>
		<Content Remove="serilog.json" />
	</ItemGroup>
	<ItemGroup>
		<PackageReference Include="Microsoft.AspNetCore.Authentication.JwtBearer" Version="8.0.11" />
		<PackageReference Include="Microsoft.AspNetCore.Authentication.Negotiate" Version="8.0.11" />
		<PackageReference Include="Microsoft.AspNetCore.SpaServices.Extensions" Version="8.0.11" />
		<PackageReference Include="Microsoft.Extensions.Hosting" Version="8.0.1" />
		<PackageReference Include="Microsoft.Extensions.Hosting.Systemd" Version="8.0.1" />
		<PackageReference Include="Microsoft.Extensions.Hosting.WindowsServices" Version="8.0.1" />
		<PackageReference Include="Albatross.Authentication.AspNetCore" Version="7.6.0" />
		<PackageReference Include="Albatross.Config" Version="7.5.8" />
		<PackageReference Include="Albatross.Logging" Version="8.0.0" />
		<PackageReference Include="Albatross.Serialization" Version="7.5.8" />
		<PackageReference Include="Swashbuckle.AspNetCore" Version="7.2.0" />
	</ItemGroup>
	<ItemGroup>
		<None Include="..\..\icon.png">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
		<None Include="..\..\LICENSE">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
		<None Include="README.md">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>
</Project>