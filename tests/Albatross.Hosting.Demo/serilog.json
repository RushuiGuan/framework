{
		"Serilog": {
				"MinimumLevel": {
						"Default": "Information",
						"Override": {
								"System": "Error",
								"Microsoft": "Error"
						}
				},
				"WriteTo": [
						{
								"Name": "Console",
								"Args": {
										"outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ssz} {MachineName} {SourceContext} {ThreadId} [{Level:w3}] {Message:lj}{NewLine}{Exception}"
								}
						},
						{
								"Name": "Logger",
								"Args": {
										"configureLogger": {
												"WriteTo": [
														{
																"Name": "File",
																"Args": {
																		"path": "%LogDirectory%\\Hosting.Demo\\HostingDemo.log",
																		"outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ssz} {MachineName} {SourceContext} {ThreadId} [{Level:w3}] {Message:lj}{NewLine}{Exception}",
																		"rollingInterval": "Day"
																}
														}
												],
												"Filter": []
										}
								}
						}
				],
				"Enrich": [ "FromLogContext", "WithThreadId", "WithMachineName" ]
		}
}