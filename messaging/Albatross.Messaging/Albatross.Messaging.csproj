<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net6.0;net7.0;net8.0</TargetFrameworks>
		<Nullable>enable</Nullable>
		<Description>This assembly contains messaging implementation using ZeroMQ.  Currently it supports pubsub and command queue pattern.</Description>
		<PackageLicenseFile>LICENSE</PackageLicenseFile>
		<LangVersion>Latest</LangVersion>
		<IncludeSymbols>True</IncludeSymbols>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
		<PackageReadmeFile>readme.md</PackageReadmeFile>
	</PropertyGroup>

	<ItemGroup>
		<ProjectReference Include="..\..\collections\Albatross.Collections\Albatross.Collections.csproj" />
		<ProjectReference Include="..\..\config\Albatross.Config\Albatross.Config.csproj" />
		<ProjectReference Include="..\..\io\Albatross.IO\Albatross.IO.csproj" />
		<ProjectReference Include="..\..\math\Albatross.Math\Albatross.Math.csproj" />
		<ProjectReference Include="..\..\reflection\Albatross.Reflection\Albatross.Reflection.csproj" />
		<ProjectReference Include="..\..\serialization\Albatross.Serialization\Albatross.Serialization.csproj" />
		<ProjectReference Include="..\..\text\Albatross.Text\Albatross.Text.csproj" />
		<ProjectReference Include="..\..\threading\Albatross.Threading\Albatross.Threading.csproj" />
		<PackageReference Include="CoenM.Encoding.Z85e" Version="1.2.1" />
		<PackageReference Include="Microsoft.Extensions.Hosting.Abstractions" Version="8.0.0" />
		<PackageReference Include="NetMQ" Version="4.0.1.13" />
	</ItemGroup>

	<ItemGroup>
		<None Include="..\..\LICENSE">
			<Pack>True</Pack>
			<PackagePath>
			</PackagePath>
		</None>
	</ItemGroup>

	<ItemGroup>
	  <None Include="readme.md">
	    <Pack>True</Pack>
	    <PackagePath>\</PackagePath>
	  </None>
	</ItemGroup>
</Project>
